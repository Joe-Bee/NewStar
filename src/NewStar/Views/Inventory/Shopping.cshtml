@model List<NewStar.Models.Shopping>

<h1>Shopping List</h1>

@if (Model.Count == 0)
{
    <p>No Items to Track yet!</p>
}

<table class="table">

    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>

    @foreach (var list in Model)
    {
        <tr>
            <td>@list.ID</td>
            <td>@list.Name</td>

            <td><p><a href="ViewList/@list.ID">View Shopping List</a></p></td>
            <td><p><a href="RemoveList/@list.ID">Remove</a></p></td>
        </tr>
    }
</table>

<p><a asp-controller="Inventory" asp-action="AddList">Add Shopping List</a></p>