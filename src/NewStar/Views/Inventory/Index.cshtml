@model List<NewStar.Models.Inventory>

<h1>Inventory</h1>

@if (Model.Count == 0)
{
    <p>No Items to Track yet!</p>
}

<table class="table">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Inventory Available</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Available</td>
           
            <td><p><a href="~/Inventory/Update/@item.ID">Update</a></p></td>
        </tr>
    }
</table>

<p><a asp-controller="Inventory" asp-action="Add">Add Inventory</a></p>